{
  "name": "logical-thinking-ai-era-guide",
  "version": "1.0.0",
  "description": "AI時代に差がつく論理的思考と表現力 - 生成AIを使いこなすための基礎スキル",
  "author": "ITDO Inc.（株式会社アイティードゥ）",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "jekyll serve --livereload",
    "build": "jekyll build",
    "build:gh-pages": "bundle exec jekyll build",
    "preview": "npm run build && npx http-server _site -p 8080 --silent",
    "deploy": "gh-pages -d _site",
    "clean": "rm -rf _site .jekyll-cache",
    "test": "npm run lint && npm run check-links",
    "lint": "markdownlint 'src/**/*.md' --ignore node_modules",
    "lint:light": "markdownlint 'src/**/*.md' --ignore node_modules",
    "check-links": "markdown-link-check src/**/*.md",
    "help": "echo 'Available commands:\n  npm start - Start development server\n  npm run build - Build the book\n  npm run preview - Local preview\n  npm run deploy - Deploy to GitHub Pages'"
  },
  "dependencies": {
    "jekyll": "^4.0.0"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.37.0",
    "markdown-link-check": "^3.11.2",
    "gh-pages": "^6.0.0",
    "http-server": "^14.1.1"
  },
  "keywords": [
    "book",
    "documentation",
    "logical-thinking",
    "ai",
    "japanese"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itdojp/LogicalThinking-AI-Era-Guide.git"
  },
  "bugs": {
    "url": "https://github.com/itdojp/LogicalThinking-AI-Era-Guide/issues"
  },
  "homepage": "https://github.com/itdojp/LogicalThinking-AI-Era-Guide#readme"
}
